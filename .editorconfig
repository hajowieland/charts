# Editor Config
root = true

# All
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
insert_trailing_newline = true
max_line_length = off
trim_trailing_whitespace = true

# Markdown uses whitespace for formatting
[*.md]
trim_trailing_whitespace = false
